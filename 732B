#include<stdio.h>

int main()
{
    int n,k,a[1000],sum = 0;
    scanf("%d %d", &n, &k);
    for(int i = 0; i < n; i++)
        scanf("%d", &a[i]);
    for(int i = 0; i < n - 1; i++)
    {
        if(a[i] + a[i+1] >= k)
            continue;
        else
        {
            sum += (k - a[i] - a[i+1]);
            a[i+1] = (k - a[i]);
        }
        printf("%d\n", sum);
        printf("%d", a[0]);
        for(int i = 1; i < n; i++)
            printf(" %d", a[i]);
        printf("\n");
        return 0;
    }
}
