#include<stdio.h>
#include <stdbool.h> 
int main()
{
    int n;
    scanf("%d", &n);
    bool stack=0;
    int arr[12]={4,7,47,74,44,77,444,447,474,477,777,774,744};
    for(int i=0; i < 12;i ++)
    {
        if(n % arr[i] == 0)
            stack =true;
    }
    if(stack==1)
        printf("YES");
    else 
        printf("NO");
    return 0;
}
